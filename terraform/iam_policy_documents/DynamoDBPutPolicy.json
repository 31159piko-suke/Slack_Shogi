{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBPut",
            "Effect": "Allow",
            "Action": [
                "dynamodb:PutItem",
                "dynamodb:UpdateItem"
            ],
            "Resource": [
                "arn:aws:dynamodb:${region}:00${account_id}:table/${table_name}"
            ]
        }
    ]
}